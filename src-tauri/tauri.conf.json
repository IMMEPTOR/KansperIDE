{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rus-ide",
  "version": "0.1.0",
  "identifier": "com.yroslav.rus-ide.dev",  
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",     
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Рус IDE",
        "width": 1100,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": true,                
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}